<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="konrad_wpam.drunkblock">

    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS" tools:ignore="ProtectedPermissions"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Password_Window_Activity"
            android:theme="@android:style/Theme.Holo.Dialog"
            android:excludeFromRecents="true"
            android:launchMode="singleTask"
            android:taskAffinity=".Password_Window_Activity">
            <intent-filter>
                <action android:name="drunkblocker.PASSWORD_WINDOW_AC"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <receiver android:name=".UnlockScreenBroadcastReceiver">
        </receiver>
        <service android:name="PasswordService" />

    </application>

</manifest>